<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emergency"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.core.vipcareplus.emergency">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#F05152"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textSize="50dp"
            android:textColor="#FFF"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp"
            android:text="EMERGENCY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="1.6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="164dp">
                <ImageButton
                    android:id="@+id/loud_noise"
                    android:layout_width="120dp"
                    android:layout_height="120sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="60dp"
                    android:layout_marginLeft="50dp"
                    android:padding="15dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/mega_phone"
                    android:background="@drawable/button_bg_round_emergency"
                    android:scaleType="fitCenter"
                    android:onClick="ringAlarm"/>

                <ImageButton
                    android:id="@+id/call_help_emergency"
                    android:layout_width="120dp"
                    android:layout_height="120sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="60dp"
                    android:layout_marginLeft="70dp"
                    android:padding="15dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_call_white_24dp"
                    android:background="@drawable/button_bg_round_emergency"
                    android:scaleType="fitCenter"
                    android:onClick="callEmergency"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="40dp"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:text="ALARM"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:textSize="40dp"
                    android:text="911"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
